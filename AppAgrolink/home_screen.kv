<HomeScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1  # Cor branca
        Rectangle:
            pos: self.pos
            size: self.size
            
    BoxLayout:
        orientation: 'vertical'
        padding: 40
        spacing: 0

        RelativeLayout:
            size_hint_y: None
            height: '145dp'  # Defina uma altura apropriada para a área da imagem

            Image:
                source: r"C:\Users\nunon\Desktop\projetofinal\ProjetoFinal\AppAgrolink\assets\logo.png"
                size_hint: None, None
                size: '140dp', '140dp'  # Tamanho da imagem
                pos_hint: {'center_x': 0.5, 'center_y': 1.5}  # Posiciona no topo e centraliza horizontalmente
                allow_stretch: True  # Permite esticar a imagem

        Label:
            text: 'Bem-vindo à AgroLink'
            size_hint_y: None
            height: 150
            color: 0, 0.5, 0, 1

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            spacing: 10
            height: '110dp'  # Ajuste a altura para os botões

            Button:
                text: 'Login'
                size_hint_y: None
                height: '50dp'
                on_release: app.root.current = 'login'
                background_color: 1, 1, 1, 0
                color: 1, 1, 1, 1  # Cor do texto branco
                canvas.before:
                    Color:
                        rgba: 0, 0.5, 0, 0.8
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [40]  # Cantos arredondados


            Button:
                text: 'Criar Utilizador'
                size_hint_y: None
                height: '50dp'
                on_release: app.root.current = 'create_account'
                background_normal: ''  # Desabilitar o fundo padrão
                background_color: 1, 1, 1, 0  # Fundo branco
                color: 0, 0.5, 0, 1  # Cor do texto verde
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 0.1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [40]  # Cantos arredondados